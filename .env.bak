# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================

# SECURITY WARNING: Keep the secret key used in production secret!
SECRET_KEY=django-insecure-change-this-in-production-12345678

# SECURITY WARNING: Don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION (MySQL)
# =============================================================================

MYSQL_DATABASE=hunarmitra
MYSQL_USER=hunarmitra_user
MYSQL_PASSWORD=hunarmitra_password_change_me
MYSQL_ROOT_PASSWORD=root_password_change_me
MYSQL_HOST=mysql
MYSQL_PORT=3306

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================

CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# STORAGE CONFIGURATION (S3/MinIO)
# =============================================================================

USE_S3=True
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=hunarmitra
MINIO_USE_SSL=False

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# EMAIL CONFIGURATION (Production only)
# =============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@hunarmitra.com

# =============================================================================
# LOGGING
# =============================================================================

DJANGO_LOG_LEVEL=INFO
