{
    "info": {
        "_postman_id": "hunarmitra-api-contract",
        "name": "HunarMitra API Contract",
        "description": "Critical endpoints relied upon by Flutter frontend.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Config",
            "item": [
                {
                    "name": "Get Feature Flags",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/flags/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "flags",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "Get Active Theme",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/core/theme/active/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "core",
                                "theme",
                                "active",
                                ""
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Workers",
            "item": [
                {
                    "name": "Get Worker Detail",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/workers/:id/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "workers",
                                ":id",
                                ""
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "uuid"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Bookings",
            "item": [
                {
                    "name": "Create Booking",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"worker_id\": \"uuid\",\n    \"job_description\": \"Test\",\n    \"scheduled_time\": \"2026-02-01T10:00:00Z\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/bookings/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "bookings",
                                ""
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "token",
            "value": ""
        }
    ]
}