# Environment Variables Example
# Copy this file to .env and fill in the values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=hunarmitra
DB_USER=root
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
SIMPLE_JWT_SECRET=your-jwt-secret-key-here

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=hunarmitra-media
MINIO_USE_SSL=False

# Rate Limiting
# Throttle rates for API requests (format: number/period)
# Periods: second, minute, hour, day
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# Sentry Error Tracking (Optional)
# Leave empty to disable Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
FEATURE_BIOMETRIC_STUB=True

# Payment Configuration
# Set to true to enable online payments, false for cash-only mode
ENABLE_PAYMENTS=false

# Notifications
# Set to true to enable notifications and timeline events
ENABLE_NOTIFICATIONS=true
# Firebase Cloud Messaging server key for push notifications (optional)
FCM_SERVER_KEY=

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Contractor Site Management
FEATURE_CONTRACTOR_SITES=true

# Emergency / Help-Now System
FEATURE_EMERGENCY=true
EMERGENCY_AUTO_ASSIGN=false
EMERGENCY_SEARCH_RADIUS_KM=5
EMERGENCY_RATE_LIMIT_PER_MINUTE=1
EMERGENCY_MAX_CANDIDATES=5
EMERGENCY_RESPONSE_TIMEOUT_SECONDS=45

# FCM Push Notifications
FCM_ENABLED=false
FCM_SERVER_KEY=
FCM_RATE_LIMIT_PER_MINUTE=60
FCM_MAX_RETRIES=3
FCM_BATCH_SIZE=100

# Dashboard Caching
DASHBOARD_CACHE_TTL_SECONDS=15
DASHBOARD_CACHE_MAX_STALE_SECONDS=60

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_MAX_EVENT_SIZE=2048

# KYC & Registration
KYC_UPLOAD_MAX_SIZE_MB=5
KYC_AUTO_APPROVE_THRESHOLD=0
KYC_DOCUMENT_RETENTION_DAYS=90
KYC_PRESIGNED_URL_EXPIRY_MINUTES=15
